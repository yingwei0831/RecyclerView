<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yw.testrecyclerview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StaggeredGridLayoutActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".TestKotlinActivity" />
        <activity
            android:name=".TestScrollingActivity"
            android:label="@string/title_activity_test_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TestMDActivity"
            android:label="@string/title_activity_test_app_bar"
            android:theme="@style/AppTheme.NoActionBar"
            />
    </application>

</manifest>