<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yw.testrecyclerview">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="design_width"
            android:value="768" />
        <meta-data
            android:name="design_height"
            android:value="1280" />

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StaggeredGridLayoutActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".TestKotlinActivity" />
        <activity
            android:name=".ui.TestScrollingActivity"
            android:label="@string/title_activity_test_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.TestMDActivity"
            android:label="@string/title_activity_test_app_bar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.TestSnackActivity"
            android:label="@string/title_activity_test_snack"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".IndexActivity" />
        <activity android:name=".ui.PermissionActivity" />
        <activity android:name=".ui.MultiplePermissionActivity" />
        <activity
            android:name=".ui.TestNavigationDrawerActivity"
            android:label="@string/title_activity_test_navigation_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.TestRetrofitActivity" />
        <activity
            android:name=".ui.TestAnimationViewActivity"
            android:theme="@style/Animation.View" />
        <activity android:name=".BaseActivity" />
        <activity android:name=".mvp.DesignPatternActivity" />
        <activity android:name=".xdroidmvp.TestXdroidMVPActivity" />
        <activity android:name=".ui.IntentServiceActivity" />
        <activity
            android:name=".ui.ObserverActivity"
            android:launchMode="singleTask" />
        <activity android:name=".ui.Observer2Activity"></activity>
    </application>

</manifest>