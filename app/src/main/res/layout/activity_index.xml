<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yw.testrecyclerview.IndexActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_Scrolling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#b342b9"
            android:padding="6dp"
            android:text="Scrolling"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#f7e74938"
            android:padding="6dp"
            android:text="ToolBar"
            android:textColor="@android:color/black" />

         <TextView
            android:id="@+id/tv_permission_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#f73f41cb"
            android:padding="6dp"
            android:text="Permission"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_multiply_permission_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#f7e74938"
            android:padding="6dp"
            android:text="MultiplyPermission"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_navigation_drawer_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#f771c60a"
            android:padding="6dp"
            android:text="Navigation_Drawer_View"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_recycler_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#da8e2b"
            android:padding="6dp"
            android:text="SnackBar_RecyclerView_Footer"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_retrofit_testing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#e480e6"
            android:padding="6dp"
            android:text="Retrofit"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_animation_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#53e0d7"
            android:padding="6dp"
            android:text="AnimationView"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/tv_design_pattern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#8e43d5"
            android:padding="6dp"
            android:text="DesignPattern"
            android:textColor="@android:color/black"
            />


    </LinearLayout>

</ScrollView>
